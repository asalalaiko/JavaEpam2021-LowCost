<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0" metadata-complete="true">


	<servlet>
		<servlet-name>user-list</servlet-name>
		<servlet-class>by.asalalaiko.servlet.user.UserListPageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>user-add</servlet-name>
		<servlet-class>by.asalalaiko.servlet.user.AddUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>user-del</servlet-name>
		<servlet-class>by.asalalaiko.servlet.user.DeleteUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>by.asalalaiko.servlet.user.LoginUserServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>user-list</servlet-name>
		<url-pattern>/userList</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>user-add</servlet-name>
		<url-pattern>/addUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>user-del</servlet-name>
		<url-pattern>/delUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

</web-app>